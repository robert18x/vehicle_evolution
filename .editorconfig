root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
charset = utf-8

[**.{cpp,h}]
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[**.cmake]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[**CMakeLists.txt]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true